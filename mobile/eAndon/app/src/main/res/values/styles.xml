<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="SpinnerStyle" parent="android:Widget.Spinner.DropDown">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:popupBackground">@drawable/spinner_popup_bg</item>
        <item name="android:dropDownVerticalOffset">30dp</item>
    </style>

    <style name="SpinnerItemStyle" parent="android:Widget.DropDownItem">
        <item name="android:background">@drawable/spinner_item_bg</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="TextViewHistory">
        <item name="android:background">@color/dark_green</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>